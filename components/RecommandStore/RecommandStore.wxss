@import  '/components/component.wxss';

.item {
    padding: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    box-shadow: 4rpx 4rpx 10rpx #ccc;
    position: relative;
}

.cover{
    position: relative;
    width: 140rpx;
    height: 140rpx;
    border-radius: 8rpx;
    overflow:hidden
}
.cover-img{
    width: 100%;
    height: 100%;
}
.store-status{
    position: absolute;
    top:-6rpx;
    left: 0;
    width:16px;
    height:22px;
    font-size: 12px;
    color: #fff
}
.store-status image{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%
}
.store-status text{
    position: absolute;
    top: 1px;
    width: 100%;
    text-align: center;
    z-index: 2
}
.content{
    height: 140rpx;
    margin:0 30rpx 0 20rpx
}
.title-status .title{
    word-break: break-all;
    max-width: 70%;
    font-size: 30rpx
}
.active-tag{
    width:30rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 8rpx;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
    border-radius: 4rpx
}
.tag-fast{
    background: #ff4545
}
.tag-group{
    background: #ffcf1c
}
.tag-cut{
    background:#a52ad8
}
.tag-city{
    background: #ff4545
}
.tag-red{
    background: #d42307
}
.tag-red image{
    width: 100%;
    height: 100%
}
.address{
    font-size:12px
}
.account{
    margin: auto 0;
    font-size: 24rpx
}
.type text{
    padding:4rpx 8rpx;
    font-size: 24rpx;
    color: #fff;
    line-height: 1;
    background: #8344eb;
    border-radius: 4rpx;
}

.type {
    margin-bottom: 20rpx;
}