@import '/components/component.wxss';
.item{
    padding:20rpx;
    background: #fff;        
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    box-shadow: 4rpx 4rpx 10rpx #ccc;
    position: relative;
}
.head{
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
}
.avatar{    
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    margin-right:20rpx;    
}
.store-name{
    word-break: break-all;
    font-size: 28rpx;
    width: 440rpx;
    color: #5e5e5e;
}
.type text{
    padding:4rpx 8rpx;
    font-size: 12px;
    color: #fff;
    line-height: 1;
    background: #8344eb;
    border-radius: 4rpx;
}
.follow{    
    padding:10rpx 24rpx;
    font-size:26rpx;
    color:#fff;
    background:#fe3d49;
    border-radius:8rpx;
    height:38rpx;
    white-space:nowrap;
    position: absolute;
    right: 20rpx;
    top: 26rpx;
}
.followed{
    color: #fe3d49;
    background: transparent
}
.setTop{
    width:20rpx;
    height:20rpx
}
.setTop,.setTop::before,.setTop::after{
    position: absolute;
    top: 0;
    right: 0;
    color: #fff
}
.setTop::after{
    content:'顶';
    font-size:28rpx
}
.setTop::before{
    content:'';
    width:0;
    height:0;
    border-top:56rpx solid #fe3d49;
    border-left:56rpx solid transparent
}
/* content */
.title,.phase{
    line-height: 1.62;
    padding-bottom: 10rpx
}
.title{
    font-size: 28rpx;
    font-weight:600
}
.phase{
    padding-bottom:10rpx;
    word-break:break-all;
    font-size:28rpx
}
/* 优惠券 */
.coupon-tag{
    margin-bottom:10rpx;
    font-size:26rpx
}
.coupon-content{
    position:relative;
    padding:0 20rpx;
    margin-bottom:12rpx;
    background:#ffeaea;
    border-radius:8rpx;
    overflow-y:hidden
}
.coupon-content::before{
    content:'';
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    box-sizing:border-box;
    border:1px solid #ffabab;
    border-radius:8rpx;
    z-index:1
}
.coupon-text{
    position:relative;
    padding:20rpx 0;
    font-size:28rpx;
    box-sizing:border-box;
    border-right:1px dashed #ffabab
}
.coupon-text::before,.coupon-text::after {
    content:'';
    display:block;
    position:absolute;
    right:-13rpx;
    width:24rpx;
    height:24rpx;
    background:#fff;
    border-radius:50%;
    border:1rpx solid #ffabab;
    z-index:2;
}
.coupon-text::before{
    top:-12rpx
}
.coupon-text::after{
    bottom:-12rpx
}
.coupon-title{
    padding-bottom:10rpx;
    color:#1e1e1e
}
.coupon-num{
    color:#ff4545
}
.coupon-btn{
    margin:auto 0 auto 20rpx;
    padding:15rpx 20rpx;
    font-size:26rpx;
    text-align:center;
    color:#fff;
    background:#ff4545;
    border-radius:28rpx
}

