.item{
    position: relative;
    padding: 20rpx;
    line-height: 1;
    border-bottom: 1rpx solid #f2f2f2
}
.cover{
    position: relative;
    width: 140rpx;
    height: 140rpx;
    margin-right: 20rpx;
    border-radius: 12rpx;
    overflow: hidden
}
.cover image{
    width: 100%;
    height: 100%;
    border-radius: 12rpx
}

.title{
    word-break: break-all;
    line-height: 1.32;
    font-size: 28rpx;
    color: #333
}
.lowest{
    font-size: 32rpx;
}
.scan{
    font-size: 24rpx
}
.scan::before{
    content: '';
    display: inline-block;
    vertical-align:-1px;
    width:26rpx;
    height:26rpx;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100%;
    margin-right: 4rpx
}
.current-info{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx
}