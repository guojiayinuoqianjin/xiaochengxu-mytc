.recommend {
    background: #fff;
    font-size: 28rpx;
    color: #666;
    padding: 0 20rpx;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}

.recommend-title {
    color:#333;
    border-bottom: 1rpx solid #f0f0f0;
    padding: 28rpx;
    position: relative;
}

.category-item {
    border-bottom: 1rpx solid #f0f0f0;
    padding: 28rpx 0;
}

.recommend-title::before {
    content: '';
    display: block;
    width: 6rpx;
    height: 28rpx;
    background:#fe3d49;
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}

