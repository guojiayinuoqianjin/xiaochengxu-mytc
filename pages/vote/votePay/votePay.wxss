#wrapper{
    width: 100vw;
    height: 100vh;
    background: #fff
}
.gift-item{
    padding: 20rpx
}
.gift-item:not(:last-of-type){
    border-bottom: 1rpx solid #f0f0f0
}
.gift-item-img{
    margin-right: 20rpx;
    width:170rpx;
    height:170rpx;
    border: 1rpx solid #f0f0f0
}
.gift-item-info{
    height: 170rpx;
    color: #333;
    font-size: 28rpx
}
.gift-item-price{
    color: #fe3d49
}
.minus,.add,.gift-num{
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-weight: 700;
    color: #333;
    background: #f0f0f0
}
.minus{
    border-right: 1rpx solid #e5e5e5
}
.add{
    border-left: 1rpx solid #e5e5e5
}
.gift-num{
    font-size: 28rpx;
    color: #666
}
.footer{
    box-sizing: border-box;
    border-top: 1rpx solid #f2f2f2;
    height: 100rpx;
    line-height: 100rpx
}
.footer-count{
    padding-right: 40rpx;
    box-sizing: border-box;
    text-align: right;
    font-size: 28rpx;
    color: #333
}
.footer-price::before{
    content:'ï¿¥';
    vertical-align: bottom;
    font-size: 28rpx
}
.footer-price{
    font-size: 36rpx;
    color: #fe3d49
}
.footer-btn{
    width:340rpx;
    height: 100%;
    background: #fe3d49;
    color: #fff;
    font-size: 28rpx;
    text-align: center
}