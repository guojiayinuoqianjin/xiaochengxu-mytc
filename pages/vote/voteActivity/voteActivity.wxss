/* 搜索 */
#search-page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: #f2f2f2
}
.search-area{
    padding: 10rpx 0 20rpx 20rpx;
    font-size: 28rpx;
    background: #fff
}
.search-input {
    padding: 10rpx 20rpx;
    background:#f2f2f2;
    border-radius: 8rpx
}

#search-page .back{
    width:60rpx;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    backface-visibility: hidden
}
#search-page .back-anim{
    animation: shortWidth .2s linear both
}
@keyframes shortWidth{
    0% {
        width:60rpx
    }
    100% {
        width: 120rpx
    }
}

.search-page-content{
    width: 100%;
    padding: 20rpx 20rpx 0;
    box-sizing: border-box;
    background: #fff;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden
}
.show-search-page-content{
    animation: scaleShow .2s linear both
}
@keyframes scaleShow{
    0%{
        transform:scale(0.95)
    }
    100%{
        transform:scale(1)
    }
}

/* footer */
#footer{
    height: 100rpx;
    width: 100vw;
    color: #999;
    text-align: center;
    font-size: 12px;
    background: #fff;
    border-top: 1rpx solid #f2f2f2;
    box-sizing: border-box
}
.footer-item::before{
    display: block;
    content: '';
    width: 22px;
    height: 22px;
    background: url(data:image/png;base64,) no-repeat;
    background-size: 70px
}

.footer-item-index::before {
    background-position: -47px -1px
}
.footer-item-index-active::before{
    background-position: -1px -1px
}
.footer-item-rank::before{
    background-position: -47px -24px
}
.footer-item-rank-active::before{
    background-position: -24px -1px
}
.footer-item-reward::before{
    background-position: 0 -48px
}
.footer-item-reward-active::before{
    background-position: 0 -25px
}
.footer-item-mine::before{
    background-position: -23px -46px
}
.footer-item-mine-active::before{
    background-position: -23px -23px
}

@media only screen and (min-width:320px){
    .footer-item::before{
        margin: 4rpx auto 4rpx
    }
}
@media only screen and (min-width:375px){
    .footer-item::before{
        margin: 12rpx auto 4rpx
    }
}
@media only screen and (min-width:414px){
    .footer-item::before{
        margin: 16rpx auto 4rpx
    }
}