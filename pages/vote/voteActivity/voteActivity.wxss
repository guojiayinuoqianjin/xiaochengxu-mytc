/* 首页 */
#page-index {
    background: #fff
}
.vote-info {
    padding-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666
}

.page-index-marqueen{
    position: relative;
    padding-top: 20rpx;
    width:100%;
    height: 23px;
}

.marqueen-icon {
    position: absolute;
    top: 20rpx;
    left: 0;
    padding-left: 20rpx;
