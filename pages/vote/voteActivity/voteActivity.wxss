.status-area{
    position: relative;
    width: 100%;
    padding-top: 20rpx;
    height: 132rpx
}
.search-vote-item {
    margin:0 20rpx; 
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    color: #999;
    background: #f2f2f2;
    border-radius: 8rpx
}
.vote-nav{
    position: relative;
    color: #333;
    border-bottom:1rpx solid #f0f0f0
}
.vote-nav-item{
    font-weight: 700;
    text-align: center;
    font-size: 30rpx;
    line-height: 70rpx
}
.nav-slider {
    position: absolute;
    bottom: 0;
    width: 56rpx;
    height: 2px;
    background: #fe3d49;
    border-radius: 2px;
    transition: all .28s
}
#swiper-page {
    height: calc(100vh - 242rpx);
}
.swiper-page-item,.swiper-page-content{
    height: 100%
}
.swiper-page-content {
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 0
}
.swiper-page-content .vote-item {
    display: inline-block;
    margin-top: 20rpx;
}
.swiper-page-content .vote-item:nth-of-type(odd){
    margin-right: 1.5%
}
.swiper-page-content .vote-item:nth-of-type(even){
    margin-left: 1.5%
}
.voted-rank {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 44rpx;
    height: 44rpx
}
.voted-rank::before,.voted-rank::after{
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 44rpx;
    height: 44rpx
}
.voted-rank::before{
    transform: rotate(45deg)
}
.voted-rank::after{
    text-align: center;
    line-height: 44rpx;
    font-size: 28rpx;
    color: #fff;
    border-radius: 50%;
    z-index: 2
}
.voted-rank-0,.voted-rank-0::before {
    background: #f5d93e
}
.voted-rank-0::after{
    content:'1';
    background: #eaba44
}
.voted-rank-1,.voted-rank-1::before {
    background: #e2e1e0
}
.voted-rank-1::after{
    content:'2';
    background: #c4c2bf
}
.voted-rank-2,.voted-rank-2::before {
    background: #f7b967
}
.voted-rank-2::after{
    content:'3';
    background: #d89943
}
.vote-empty{
    padding-top: 120rpx;
    text-align: center
}
.vote-empty-img {
    width: 160rpx;
    height: 160rpx;
}
.vote-empty-tips{
    padding: 20rpx 0;
    font-size: 28rpx;
    color: #999
}
.vote-empty-nostart{
    padding: 0
}
.vote-empty-link{
    font-size: 24rpx;
    color: #fe3d49
}
