@import "../../css/cell.wxss";
view {
    line-height: 1;
    box-sizing: border-box;
}

/* 上传照片 */

.release-img-wrap {
    padding: 20rpx 0;
    background: #fff;
    margin-bottom: 20rpx;
    overflow: hidden;
}

.btnaddfile {
    width: 80px;
    height: 80px;
    display: block;
    float: left;
}

.clear_btn {
    position: absolute;
    right: 0;
    top: 0;
}

/* 优惠信息 */

.release-discount-name-wrap {
    font-size: 28rpx;
    background: #FFF;
    padding: 0 20rpx;
}

.release-discount-name-item {
    height: 100rpx;
}

.release-discount-name-item+.release-discount-name-item {
    border-top: 1rpx solid #f0f0f0;
}

.release-discount-name-left {
    width: 200rpx;
}

.release-discount-name-input {
    width: 480rpx;
}

/* 时间设置 */

.discount-time-wrap {
    font-size: 28rpx;
    background: #FFF;
}

/* 规则设置 */

.discount-rule {
    background: #fff;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.discount-rule-item {
    height: 100rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.discount-rule-item-left {
    width: 200rpx;
}

.relase-discount-btn {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fe3d49;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
}

.rule-des-item {
    margin-bottom: 20rpx;
}

.rule-des {
    color: #999;
    font-size: 28rpx;
    padding: 20rpx;
    line-height: 1.2;
}

.ruzhu_cells .kuang-input {
    vertical-align: middle;
    border-color: #999;
    color: #333
}

.write_cell .write_textarea {
    margin: 0;
    min-height: 160rpx;
    word-break: break-all
}

.description .clear_btn {
    position: absolute; 
    top: 0
}

.lingqu .ruzhu_cell {
    padding: 20rpx;
    margin-bottom: 0;
    border-bottom: 1rpx solid #f0f0f0
}

.jizan_rules wx-text {
    margin-bottom: 8rpx
}

.vz-flwx-bw {
    -webkit-box-pack: space-between;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.picker-top-bar {
    position: absolute;
    bottom: 300px;
    width: 100%;
    background: #fff;
    font-size: 36rpx;
    -webkit-box-pack: space-between;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.voucher-wrapper {
    background: #fff;
    font-size: 28rpx;
    padding: 0 20rpx;
}

.required {
     color: #fe3d49;
}

.instructions {
    font-size: 24rpx;
    color: #999;
}

.voucher-item {
    height: 100rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.voucher-item-left {
    width: 200rpx;
}

.voucher-use-scope view {
    padding: 8rpx 0;
    width: 160rpx;
    text-align: center;
    border-radius: 12rpx;
    border: 1rpx solid #999;   
    color: #999; 
    margin-right: 20rpx; 
}

.voucher-use-scope .active {
    color: #fe3d49;
    border-color: #fe3d49;
}.distribution-wrap {
    font-size: 28rpx;
    padding: 0 20rpx;
    background: #fff;
}