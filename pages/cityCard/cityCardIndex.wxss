@import "../../public/floatbtntpl.wxss";
view {
    line-height: 1;
    box-sizing: border-box;
}

text {
    line-height: 1;
}

.top-bg {
    width: 100%;
    height: 220rpx;
}

.city-card-self {
    width: 702rpx;
    height: 320rpx;
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    z-index: -1;
}

.city-card-name {
    color: #fff;
    font-size: 48rpx;
    padding: 88rpx 0 20rpx;
}

.city-card-open-btn {

}

.city-card-exchange {
    font-size: 24rpx;
    color: #fff;
}

.city-card-self-wrp {
    text-align: center;
    position: absolute;
    top: 40rpx;
    z-index: 99;
    width: 100%;
}

.city-card-container {
    background: #fff;
    min-height: 100vh;
}

.circle {
    width: 14rpx;
    height: 30rpx;
}

.member-text {
    font-size: 32rpx;
    color: #D9AE6F;
    margin: 0 20rpx;
}

.member-right-des {
    text-align: center;
    padding-top: 120rpx;
    margin-bottom: 40rpx;
}

.right-img {
    width: 90rpx;
    height: 90rpx;
}

.right-text {
    color: #333;
    font-size: 24rpx;
    padding-top: 20rpx;
}

.month-copon {
    font-size: 32rpx;    
    padding: 30rpx 30rpx 40rpx;
}

.coupon-list-left {
    width: 180rpx;
    height: 166rpx;    
    color: #fff;
    position: relative;
    float: left;
    border-radius: 10rpx 0px 0px 10rpx;
}

.money-label {
    font-weight: 700;
    font-size: 28rpx;
}

.money-amount {
    font-weight: 700;
    font-size: 50rpx;
    color: #ff3a1b;
}

.coupon-condition {
    font-size: 24rpx;
    padding-top: 20rpx;
}

.price-amount-wrp {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 100%;
    text-align: center;
    transform: translate(-50%, -50%);
}

.coupon-list-right {
    background: #fff;
    height: 166rpx;
    width: 510rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
    float: left;
    border-radius: 0px 10rpx 10rpx 0px;
    overflow: hidden;
    position: relative;
}

.only-tip {
    width: 100rpx;
    line-height: 28rpx;
    background: linear-gradient(90deg, rgba(238, 218, 163, 1), rgba(214, 189, 120, 1));
    border-radius: 14rpx;
    text-align: center;
    font-size: 20rpx;
    margin: 0 20rpx 0 0;
}

.coupon-name {
    font-size: 24rpx;
    font-weight: 700;
    width: 260rpx;
    line-height: 1.3;
}

.coupon-tips {
    color: #999;
    font-size: 24rpx;
    padding: 10rpx 0;
}

.use-condition {
    font-size: 24rpx;
    color: red;
    padding-top: 24rpx;
}

.coupon-item {
    margin: 0 auto 20rpx;
    width: 90%;
    box-shadow:0px 0px 38rpx 0px rgba(0, 0, 0, 0.11);
}

.open-btn-wrp {            
    width: 100%;
    position: fixed;
    bottom: 10rpx;
    left: 0;
}

.open-btn {
    line-height: 80rpx;
    height: 80rpx;
    background: #FF0000;
    border-radius: 40rpx;
    font-size: 32rpx;
    text-align: center;
    margin: 0 auto;
    width: 702rpx;
    font-weight: 700;
    position: relative;
}

.fresh-man {
    width: 200rpx;
    line-height: 36rpx;
    background: linear-gradient(90deg, rgba(255, 84, 0, 1), rgba(250, 15, 103, 1));
    border-radius: 10rpx;
    position: absolute;
    transform: rotate(45deg);
    right: -57rpx;
    top: 29rpx;
    font-size: 20rpx;
    text-align: center;
    color: #fff;
}

.receive-btn {
    width: 150rpx;
    line-height: 48rpx;
    background: linear-gradient(90deg, rgba(85, 189, 255, 1), rgba(70, 153, 255, 1));
    border-radius: 24rpx;
    color: #fff;
    text-align: center;
    font-size: 28rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}

.city-card-exchange .icon-jiantou::before {
    color: #D9AE6F;
}

.open-btn .icon-jiantou::before {
    color: #000;
}

.city-card-exchange {
    position: absolute;
    left: 50%;
    bottom: -14rpx;
    transform: translateX(-50%);
}

.text-wrp {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.member-right {
    color: #fff;
    font-size: 32rpx;
}

.renew-btn {
    color: #fff;
    font-size: 32rpx;
    width: 260rpx;
    line-height: 58rpx;
    border: 1px solid #fff;
    border-radius: 30rpx;
}

.rights-wrp {
    padding: 30rpx 60rpx;
}

.city-card-exchange-active {
    top: 10%;
}

.right-logo-wrp {
    padding: 180rpx 0 60rpx;
}

.common-title {
    font-size: 32rpx;
    color: #333;
}

.common-sub-title {
    font-size: 24rpx;
    color: #333;
}

.common-more {
    color: #333;
    font-size: 24rpx;
}

.member-store-wrp {
    padding: 0 30rpx 30rpx;
}

.flex-container {
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}

.member-store-item {
    width: 335rpx;
    height: 180rpx;
    padding: 20rpx;
    box-shadow: 0px 0px 38rpx 0px rgba(0, 0, 0, 0.11);
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.member-store-img {
    width: 140rpx;
    height: 140rpx;
    padding-right: 10rpx;
}

.member-store-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
}

.member-goods-price {
    color: #FF0000;
    font-size: 40rpx;
    font-weight: 700;
}

.member-discount-goods-img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.member-discount-goods-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
    line-height: 1.3;
}

.member-discount-goods-wrp {
    width: 690rpx;
    background: #fff;
    box-shadow: 0px 0px 38rpx 0px rgba(0, 0, 0, 0.11);
    border-radius: 10rpx;
    padding: 20rpx;
    margin: 0 auto 20rpx;    
}

.member-store-label {
    font-size: 20rpx;
    color: #fff;
    background: #FFAD2C;
    border-radius:28rpx;
    width: 80rpx;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    margin: 0 30rpx 0 14rpx;
}

.text-wrp .icon-jiantou::before {
    color: #fff !important;
}

.city-card-exchange .icon-jiantou::before {
    color: #fff !important;
}

.sold-price {
    font-size: 24rpx;
    color: #333;
}

.discount-buy-btn {
    width: 150rpx;
    line-height: 48rpx !important;
    background: linear-gradient(90deg, rgba(85, 189, 255, 1), rgba(70, 153, 255, 1));
    border-radius: 24rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}