@import "../../public/navigatorCommon.wxss";
 view, text {
     box-sizing: border-box;
     line-height: 1;
 }

.tabItem {
    font-size:28rpx;
    line-height:3.14285714;
    text-align:center;
    background:#fff;
}

.tabItemActive {
    position: relative;
    color: #fe3d49;
    border-bottom: 4rpx solid #fe3d49
}

.city-card-guide {
    height: 88rpx;
    color: #333;
    font-size: 28rpx;
    background: #fff;
    text-align: center;
    line-height: 88rpx;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .city-card-list {
    margin-bottom: 20rpx;
  }
  
  .city-card-list image {
    width: 100%;
    height: 340rpx; 
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
  }
  
  .city-card-body {
    position: relative;  
    text-align: center;
    height: 340rpx;
    overflow: hidden;
    padding:0 20rpx;
    
  }
  
  .city-card-body text {  
    color: #fff;
    position: absolute;
    z-index: 2;  
  }
  
  .city-card-name {
    font-size: 50rpx;
    top:15%;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
  }
  
  .city-card-des {
    font-size: 36rpx;
    padding: 0 30px;
    width: 100%;
    box-sizing: border-box;
    top:45%;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
  }
  
  .city-card-tips {
    font-size: 24rpx;
    top:80%;
    left: 50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    width:100%;
  }
  
  .city-card-label {
    background:#999;
    height:50rpx;
    line-height:50rpx;
    width:235rpx;
    color:#fff;
    font-size:28rpx;
    position:absolute;
    top:40rpx;
    right:-60rpx;
    transform:rotate(45deg);
    -webkit-transform:rotate(45deg);
    z-index:10;
    
  }
  
  .city-card-label text {
    position: absolute;
    left: 15%;
    margin-top: 10rpx;
  }
 
  .buy-card-btn view{
    width: 45%;
    height: 68rpx;
    text-align: center;
    line-height: 68rpx;
    background: #fe3d49;
    font-size: 28rpx;
    color:#fff;
    border-radius: 8rpx;
  }

.date-wrap {
 padding: 0 20rpx;
}
  
  
.date-left {
    padding: 20rpx;
    text-align: center;
}

.date-left text:first-child {
    margin-bottom: 4rpx;
}

.base-scroll-view {
    width:100%;
    display:flex;
    white-space:nowrap;
    font-size:0;
    text-align:center;
    overflow-x:scroll;
    text-align: center;
}

.base-scroll-item-view {
    display:inline-block;
    width:120rpx;
    font-size:28rpx;
    padding: 20rpx;
    height: 100%;    
}

.base-scroll-item-view text:first-child{
    margin-bottom: 4rpx;
}

.bot-left {
    font-size: 28rpx;
    color:#333;
    width: 50%;
    border-right: 1rpx solid #f0f0f0;
    height: 80rpx;
    line-height: 80rpx;
    display: block;
    padding-right: 20rpx;
}

.bot-right {
    font-size: 28rpx;
    color:#333;
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    display: block;
    padding-left: 20rpx;
}

.date-active {
    background: #fe3d49;
    color: #fff;
}

.exchange-code-wrap {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.5);
    z-index: 1000;
}

.exchange-code-body {
    width:100%;
    background: #fff;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 0 20rpx;
}

.exchange-code-title {
    font-size: 32rpx;
    color: #333;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.icon-guanbi {
    position: absolute;    
    top: 0rpx; 
    right: 0;   
}

.icon-jiantou {
    transform: rotate(90deg);
    -webkit-transform: rotate(90deg);
}

.exchange-code-input {
    height: 60rpx;
    padding: 0 20rpx;
    border: 1rpx solid #f0f0f0;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #333;
    margin: 20rpx 0 60rpx;
}

.exchange-code-valid-btn {
    height: 80rpx;
    line-height: 80rpx;
    background: #fe3d49;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    margin: 0 -20rpx;
}

.icon-guanbi {
    padding: 0 20rpx;
    font-size: 36rpx;
}

.city-card-discount-list-wrap {
    padding: 0 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.city-card-discount-list-title {
    height: 80rpx;
    line-height: 80rpx;
    color:#333;
    font-size: 28rpx;
    border-bottom:1rpx solid #f0f0f0;
}

.city-card-store-logo {
    height: 200rpx;
    width:200rpx;
}

.city-card-discount-list-bot {
    padding: 20rpx 0;
    position: relative;
}

.city-card-store-logo-wrap {
    padding-right: 20rpx;
    position: relative;
    overflow: hidden;
}

.city-card-discount-store-name {
    font-size: 32rpx;
    color:#333; 
    font-weight: 700;
    margin-bottom:20rpx;
}

.city-card-discount-desc {
    font-size: 26rpx;
    color: #666;
    margin-top: 8rpx;
    padding-bottom:10rpx;    
}

.city-card-discount-tips {
    font-size: 28rpx;
    color: #fe3d49;
    margin-top: 14px;
}

.city-card-discount-getting {
    width: 160rpx;
    height: 60rpx;
    display: block;
    color: #fff;
    border-radius: 8rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    position: absolute;
    bottom: 60rpx;
    right: 0;
    background: #fe3d49;    
}

.city-card-discount-label {
    height:34rpx;
    width:158rpx;
    background:#fe3d49;
    font-size:22rpx;
    text-align:center;
    line-height:33rpx;
    color:#fff;
    transform:rotate(-45deg);
    -webkit-transform:rotate(-45deg);
    position:absolute;
    left:-47rpx;
    top:15rpx;    
}

/*footer*/
.footer {
    display: flex;
    flex: 1;
    width: 100%; 
    height: 100rpx;
     line-height: 100rpx;
    padding: 10rpx 10rpx;
    position: fixed;
    bottom: 0;
    background: #fff;
    box-sizing: border-box;
    border-top: 1rpx solid #f0f0f0;
    color:#333;
  }
  
  .footer-item {
      flex: 1;
      font-size: 24rpx;        
      text-align: center;
      margin-top:-4rpx;
  }
  
  .footer-icon {
    display: block;
    padding-bottom: 4rpx;
    font-size: 48rpx;   
  }
  
  .footer-active{
      color: #fe3d49;  
  }
  


  .city-card-discount-list-bot+ .city-card-discount-list-bot {
      border-top: 1rpx solid #f0f0f0;
  }

  .icon-city-store::before {
      font-size: 34rpx;
  }

  .city-card-body .black-mask {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    z-index: 2;
}