/*footer*/
.footer {
    display: flex;
    flex: 1;
    width: 100%; 
    height: 100rpx;
    padding: 10rpx 10rpx;
    position: fixed;
    bottom: 0;
    background: #fff;
    box-sizing: border-box;
    border-top: 1rpx solid #f0f0f0;
    color:#333;
  }
  
  .footer-item {
      flex: 1;
      font-size: 24rpx;        
      text-align: center;
      margin-top:-4rpx;
  }
  
  .footer-icon {
    display: block;
    padding-bottom: 4rpx;
    font-size: 48rpx;   
  }
  
  .footer-active{
      color: #fe3d49;  
  }
  
  