.member-left-arrow {
    position: absolute;
    transform: rotate(180deg);
}

.member-store-top {
    height: 88rpx;
    color: #333;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
    width: 460rpx;
    height: 60rpx;
    border: 1px solid rgba(153, 153, 153, 1);
    border-radius: 30rpx;
    margin: 0 30rpx 0 40rpx;
    padding: 0 30rpx;
}

.search-input {
    font-size: 28rpx;
    padding-left: 20rpx;
}

.member-store-container {
    height: 100vh;
}

.member-store-container view {
    line-height: 1;
    box-sizing: border-box;
}

.member-store-container .lated-publish {
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
    color: #FF5A00;
    background: #fff;
}

.lated-publish-down-arrow {
    width: 26rpx;
    height: 18rpx;
    margin-left: 20rpx;
}

.flex-container {
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}

.choose-options {
    font-size: 28rpx;
    text-align: center;
    position: absolute;
    top: 80rpx;
    width: 100%;
}

.choose-options view {
    line-height: 80rpx;
    background: #fff;
    border-top: 1rpx solid #f0f0f0;
}

.member-store-mask {
    height: 100vh;
    width: 100%;
    position: fixed;
    top: 328rpx;
    background: rgba(0, 0, 0, 0.5);
    bottom: 0;
}

.member-store-hidden {
    overflow: hidden;
}

.options-strong {
    color: #FF5A00;
}

.member-discount-goods-wrp {
    width: 660rpx;
    background: #fff;
    box-shadow: 0px 0px 38rpx 0px rgba(0, 0, 0, 0.11);
    border-radius: 10rpx;
    padding: 20rpx;
    margin: 0 auto 20rpx;
}

.member-discount-goods-img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}

.member-discount-goods-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
    line-height: 1.3;
}

.member-store-label {
    font-size: 20rpx;
    color: #fff;
    background: #FFAD2C;
    border-radius: 28rpx;
    width: 80rpx;
    height: 28rpx;
    line-height: 28rpx !important;
    text-align: center;
    margin: 0 30rpx 0 14rpx;
}

.sold-price {
    font-size: 24rpx;
    color: #333;
}

.discount-buy-btn {
    width: 150rpx;
    line-height: 48rpx !important;
    background: linear-gradient(90deg, rgba(85, 189, 255, 1), rgba(70, 153, 255, 1));
    border-radius: 24rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}