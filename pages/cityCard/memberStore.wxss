@import "../../public/floatbtntpl.wxss";

.member-left-arrow {
  position: absolute;
  
  transform: rotate(180deg);
}

.member-store-top {
    height: 88rpx;
    color: #333;
    background: #fff;
    border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
    width: 460rpx;
    height: 60rpx;
    border: 1px solid rgba(153, 153, 153, 1);
    border-radius: 30rpx;
    margin:0 30rpx 0 40rpx;
    padding: 0 30rpx;

}

.search-input {
    font-size:28rpx;
    padding-left: 20rpx;
}

.member-store-container {
    height: 100vh;
}

.member-store-container view {
    line-height: 1;
    box-sizing: border-box;
}

.member-store-container .lated-publish {
    text-align: center;
    line-height: 80rpx;    
    font-size: 28rpx;
    color: #FF5A00;
    background: #fff;
}

.lated-publish-down-arrow {
    width:26rpx;
    height:18rpx;   
    margin-left:20rpx; 
}

.flex-container {
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}

.member-store-item {
    width: 335rpx;
    height: 180rpx;
    padding: 20rpx;
    box-shadow: 0px 0px 38rpx 0px rgba(0, 0, 0, 0.11);
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.member-store-img {
    width: 140rpx;
    height: 140rpx;
    padding-right: 10rpx;
}

.member-store-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 700;
}

.member-goods-price {
    color: #FF0000;
    font-size: 40rpx;
    font-weight: 700;
}

.choose-options {
    font-size:28rpx;
    text-align: center;
    position: absolute;
    top: 80rpx;
    width: 100%;
}

.choose-options view {
    line-height:80rpx;
    background: #fff;
    border-top: 1rpx solid #f0f0f0;
}

.member-store-mask {
    height: 100vh;
    width: 100%;
    position: fixed;
    top:328rpx;
    background: rgba(0, 0, 0, 0.5);
    bottom: 0;
}

.member-store-hidden {
    overflow: hidden;
}

.options-strong {
    color: #FF5A00;
}