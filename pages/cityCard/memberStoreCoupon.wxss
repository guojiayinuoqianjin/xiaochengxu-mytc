.coupon-list-left {
    width: 180rpx;
    height: 166rpx;
    background: #fff;
    position: relative;
    float: left;
    border-radius: 10rpx 0px 0px 10rpx;
}

.price-amount-wrp {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 100%;
    text-align: center;
    transform: translate(-50%, -50%);
}

.coupon-list-right {
    background: #fff;
    height: 166rpx;
    width: 510rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
    float: left;
    border-radius: 0px 10rpx 10rpx 0px;
    overflow: hidden;
    position: relative;
}

.only-tip {
    width: 100rpx;
    line-height: 28rpx !important;
    background: linear-gradient(90deg, rgba(238, 218, 163, 1), rgba(214, 189, 120, 1));
    border-radius: 14rpx;
    text-align: center;
    font-size: 20rpx;
    margin: 0 20rpx 0 0;
}

.coupon-name {
    font-size: 24rpx;
    font-weight: 700;
    width: 260rpx;
    line-height: 1.3 !important;
}

.coupon-tips {
    color: #999;
    font-size: 24rpx;
    padding: 10rpx 0;
}

.use-condition {
    font-size: 24rpx;
    color: red;
    padding-top: 24rpx;
}

.fresh-man {
    width: 200rpx;
    line-height: 36rpx !important;
    background: linear-gradient(90deg, rgba(255, 84, 0, 1), rgba(250, 15, 103, 1));
    border-radius: 10rpx;
    position: absolute;
    transform: rotate(45deg);
    right: -57rpx;
    top: 29rpx;
    font-size: 20rpx;
    text-align: center;
    color: #fff;
}

.receive-btn {
    width: 150rpx;
    line-height: 48rpx !important;
    background: linear-gradient(90deg, rgba(85, 189, 255, 1), rgba(70, 153, 255, 1));
    border-radius: 24rpx;
    color: #fff;
    text-align: center;
    font-size: 28rpx;
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}

.coupon-condition {
    font-size: 24rpx;
    padding-top: 20rpx;
}

.money-label {
    font-weight: 700;
    font-size: 28rpx;
    color: #FF0000;
}

.money-amount {
    font-weight: 700;
    font-size: 50rpx;
    color: #FF0000;
}

.member-store-label {
    font-size: 20rpx;
    color: #fff;
    background: #FFAD2C;
    border-radius:28rpx;
    width: 80rpx;
    height: 28rpx;
    line-height: 28rpx !important;
    text-align: center;
    margin: 0 30rpx 0 14rpx;
}