.flex-cell{
  flex: 1;
}.vbIn{
	width: 90%;
	height: auto;
	background-color: #fff;
	position: absolute;
	top:30%;
	left: 5%;
	border-radius: 5px;
	padding-top: 18px;
}
.vbTitle{
	text-align: center;
	font-size: 16px;
	line-height: 20px;
	color:#333;
}
.vbInput{
	text-align: center;
}
.vbUl{
	margin:auto;
	width: 120px;
	height:30px;
	align-items: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    border:1px solid #ccc;
    box-sizing:border-box;
}
.vbUl .li{
	text-align: center;
	webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    color:#999;
    font-size: 18px;
    line-height:30px;
    border-right: 1px solid #ccc;
    box-sizing:border-box;
}
.vbUl .li:last-child{
	border:none;
}.ulbox{
	display: inline-block;
	width:30px;
	height:30px;
}
.ulinput{
	width: 60px;
}
.ulinput input{
	width: 100%;
	height: 100%;
	text-align: center;
}
.vbCenter{
	margin-top: 14px;
	padding-bottom: 55px;
}
.vbBottom{
	width: 100%;
	height: 44px;
	position: relative;
	box-sizing:border-box;
}
.vbBottom:after{
	content: " ";
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 1px;
	
	-webkit-transform-origin: 0 100%;
	transform-origin: 0 100%;
	-webkit-transform: scaleY(0.5);
	transform: scaleY(0.5);
	box-sizing:border-box;
}
.vb_bot{
	width: 100%;
	height: 44px;
	align-items: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.vb_b_left{
	webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
}
.vb_bot .li{
	text-align: center;
	height: 44px;
	line-height: 44px;
	font-size: 16px;
	color:#333;
	overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.vb_b_left span{
	color:#ff5d38;
}
.vb_b_left{
	width: 60%;
}
.vb_b_right{
	width: 40%;
}
.vb_b_right a{
	display: inline-block;
	width: 100%;
	height: 100%;
	color:#fff;
	font-size: 16px;
	background-color: #ff5d38;	
	line-height: 44px;
