@import "../../public/navigatorCommon.wxss";
view {
    line-height: 1;
    box-sizing: border-box;
}
.goods-img {
    width: 140rpx;
    height: 140rpx;
    margin:0 20rpx 20rpx 0;
}

.goods-name {
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.distribution-type {
    font-size: 24rpx;
    color: #666;
}

.distribution-container {
    background: #fff;
    padding: 20rpx 20rpx 0;
    margin-bottom: 20rpx;
}

.distribution-top {
    border-bottom: 1rpx solid #f0f0f0;
}

.distribution-state {
    font-size: 28rpx;
}

.distribution-btn view {
    font-size: 24rpx;
    padding: 8rpx 12rpx;
    border-radius: 4rpx;
    border: 1rpx solid #666;
    margin-left: 20rpx;
}

.distribution-bottom {
    padding: 20rpx 0;
}

/*footer*/
.footer {
    display: flex;
    flex: 1;
    width: 100%; 
    height: 100rpx;
     line-height: 100rpx;
    padding: 10rpx 10rpx;
    position: fixed;
    bottom: 0;
    background: #fff;
    box-sizing: border-box;
    border-top: 1rpx solid #f0f0f0;
    color:#333;
    z-index: 10000;
  }
  
  .footer-item {
      flex: 1;
      font-size: 24rpx;        
      text-align: center;
      margin-top:-4rpx;
  }
  
  .footer-icon {
    display: block;
    padding-bottom: 4rpx;
    font-size: 48rpx;   
  }
  
  .footer-active{
      color: #fe3d49;  
  }
  
  .distribution-rule {
    background: #fff;
    font-size: 28rpx;
    color:#666;   
    width: 80%;       
    border-radius: 8rpx;
    padding-bottom: 40rpx;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 20%;
  }

  .distribution-rule .title {
      line-height: 76rpx;
      border-bottom: 1rpx solid #f0f0f0;
      text-align: center;
      margin-bottom: 20rpx;
  }

  .distribution-rule .item {
    line-height: 1.6;
    padding: 0 20rpx;
  }

  .distribution-rule-btn {
      width: 400rpx;
      line-height: 80rpx;
      text-align: center;
      color: #fff;
      background: #fe3d49;
      border-radius: 8rpx;
      margin: 0 auto;
  }

  .show-rule {
      width: 80rpx;
      height: 80rpx;
      border-radius: 100%;
      text-align: center;
      line-height: 80rpx;
      font-size: 28rpx;
      position: fixed;
      bottom: 20%;
      right: 20rpx;
      background: rgba(0, 0, 0, .5);
      color: #fff;
