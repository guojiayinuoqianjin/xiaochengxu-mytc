#wrapper{
    line-height: 1;
    word-break: break-all;
    width: 100vw;
    height: 100vh;
    overflow:hidden;
    background: #fff;
}
#nav{
    height: 96rpx;
    line-height: 96rpx;
    color: #333;
    font-size: 28rpx;
    border-bottom: 1rpx solid #f2f2f2
}
.navItem{
    position: relative;
    text-align: center
}
.navActive{
    color: #fe3d49;
}
.navActive::after{
    content: "";
    display: block;
    width: 40%;
    height: 4rpx;
    background: #fe3d49;
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    margin: 0 auto
}
#content{
    font-size: 28rpx;
    color: #333;
    overflow-y: scroll
}
.page{
    height: 100%;
    padding-bottom: 100rpx;
    box-sizing: border-box;
}
.scrollContent{
    height: 100%;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
}
.groupList{
    background: #f2f2f2
}
.groupItem{
    background: #fff;
    margin-bottom: 20rpx
}
.mark{
    color: #fe3d49
}
.groupCon{
    position: relative;
    padding:20rpx 0 20rpx 20rpx;
    border-bottom: 1rpx solid #f2f2f2
}
.groupCover{
    width:160rpx;
    height:160rpx;
    border-radius: 8rpx;
    overflow: hidden;
}
.groupInfo{
    text-align: left;
    margin-left: 16rpx
}
.groupCover image{
    width: 100%;
    height: 100%
}
.groupTitle{
    line-height: 1.2;
    max-width: 70%;
    font-size: 32rpx;
    color: #fe3d49
}

.groupNum{
    font-size: 28rpx
}
.groupTitle,.groupNum,.groupPrice,.groupRest {
    margin-bottom: 10rpx
}
.groupInfo{
    color: #999
}
.groupInfo .mark{
    color: #fe3d49
}
.groupEndTime::before{
    content: '';
    display: inline-block;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    background: url('https://i.vzan.cc/citysource/xcx_heka/time.png');
    background-size:100%
}
.groupStatus{
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    padding: 8rpx 10rpx;
    color: #fff
}
.progressing{
    background: #fe3d49
}
.await{
    background: #ffcf1c
}
.delete{
    background: #ef2000
}
.overd{
    background: #666
}
.groupAction{
    padding: 20rpx 
}
.groupAction .btn{
    padding: 12rpx 0;
    width: 148rpx;
    line-height: 1;
    text-align: center;
    color: #fe3d49;
    border-radius: 8rpx;
    border: 1rpx solid #fe3d49
}
.groupAction .btn:first-of-type{
    margin-left: auto
}
.groupAction .btn:not(:last-of-type){
    margin-right: 20rpx
}
.groupListNone{
    position: absolute;
    top: 180rpx;
    right: 0;
    left: 0;
    margin: 0 auto;
    text-align: center;
    z-index: 20;
}
.groupListNone image{
    width:200rpx;
    height: 200rpx;
    margin-bottom: 20rpx
}
.loadAllData{
    padding: 30rpx 0;
    color: #999;
    font-size: 28rpx;
    text-align: center;
    background: #fff;
}
.btn-lg{
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 32rpx;
    background: #fe3d49
}
.layer{
    width: 100vw;
    height:100vh;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    background: rgba(0, 0, 0, .42)
}
.layerContent{
    position: absolute;
    width: 560rpx;
    height:640rpx;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    font-size: 28rpx;
    text-align: center;
    border-radius: 16rpx;
    padding: 20rpx 12rpx;
    background: #fff
}
.layerTitle{
    padding-top: 20rpx;
    font-size: 32rpx;
    color: #333
}
.layerTips{
    padding: 20rpx 0
}
.layerContent image{
    width: 400rpx;
    height: 400rpx
}
.close{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    width: 30px;
    height: 30px
}
.close::before,.close::after{
    background: #666
}

.re-coupons {
    font-size:24rpx;
    background:rgba(0, 0, 0, 0.5);
    color:#fff;
    position:absolute;
    width:100%;
    text-align:center;
    padding:6rpx 0;
    bottom:0rpx;
    
    }