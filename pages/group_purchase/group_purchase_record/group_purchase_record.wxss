#wrapper{    
    width: 100vw;
    height: 100vh;
    line-height: 1;
    color: #333;
    font-size: 28rpx;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch
}
#grid{
    background: #fff
}
.gridItem{
    padding:40rpx 0;
    box-sizing: border-box;
    text-align: center;
    width: 50%;
    border-bottom: 1rpx solid #f2f2f2
}
.gridItem:nth-child(2n+1){
    border-right: 1rpx solid #f2f2f2
}
.gridItem .title{
    margin-bottom: 16rpx
}
.title::before{
    display: inline-block;
    content: '';
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
    margin-right: 8rpx
}
.gridItem:nth-child(1) .title::before{
    background: url(data:image/png;base64,);
    background-size: 100%
}
.gridItem:nth-child(2) .title::before{
    background: url(data:image/png;base64,);
    background-size: 100%
}
.gridItem:nth-child(3) .title::before{
    background: url(data:image/png;base64,);
    background-size: 100%
}
.gridItem:nth-child(4) .title::before{
    background: url(data:image/png;base64,);
    background-size: 100%
}
.tips{
    padding: 20rpx;
    font-size: 24rpx;
    background: #fff
}
.groupList{
    margin-top: 20rpx;
    background: #f2f2f2
}
.groupItem{
    background: #fff
}
.groupItem:not(:last-of-type){
    margin-bottom: 20rpx
}
.groupStatus{
    padding: 20rpx;
    color: #fff;
    background: #fe3d49;
    border-bottom: 1rpx solid #f2f2f2
}
.groupItemCon{
    padding: 15px 20rpx
}
.groupItemCon .avatar{
    margin: 0 12rpx;
    width: 140rpx;
    height: 140rpx
}
.groupItemInfo view:not(:last-of-type){
    margin-bottom: 10rpx
}
.groupItemCon .avatar image{
    width: 100%;
    height: 100%;
    border-radius: 50%
}
.groupItem .contact{
    padding: 12rpx 24rpx;
    color: #fff;
    background: #fe3d49;
    border-radius: 28rpx
}
.groupItemInfo .status{
    color: #fe3d49
}
.loadingAll{
    padding: 30rpx;
