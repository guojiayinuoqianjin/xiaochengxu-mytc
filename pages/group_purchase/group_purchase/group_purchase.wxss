@import '../../../public/navigatorCommon.wxss';
#wrapper{
  width: 100%;
  height: 100vh;
  background: #f2f2f2
}
.scrollContent{
  height: 100vh;
  padding-bottom: 100rpx;
  box-sizing: border-box;
  overflow-y:scroll; 
  -webkit-overflow-scrolling: touch
}
.testvideo{
  height: 360rpx;
  width: 100%;
}
#nav{
    position:relative;
    background: #fff
}
#nav .swiper{
    width:100%;
    height:420rpx
}
#nav .swiper image{
    width:100%;
    height:100%
}
/* 信息 */
.groupInfo{
  line-height: 1;
  position: relative;
  padding: 20rpx 0;
  background: #fff
}
.groupInfo .title{
  padding: 20rpx;
  color: #333;
  font-weight: 700;
  font-size: 36rpx
}
.groupInfo .small_money{
  padding:0 20rpx;
  color: #999;
  font-size: 28rpx;
  text-decoration: line-through
}
.groupInfo .main-info{
    padding: 20rpx;
    border-bottom: 1rpx solid #f2f2f2
}
.groupInfo .big_money{
  font-size: 36rpx;
  color: #fe3d47
}
.groupInfo .big_money text{
    color: #333
}
.groupInfo .num{
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #f2f2f2
}
.groupInfo .time{
  padding: 20rpx;
  font-size: 28rpx;
  color: #fe3d49;
  border-bottom: 1rpx solid #f2f2f2
}
.groupInfo .time text{
    color:#999;
    margin-right: 10rpx
}

