/* 团购条件 */
.groupCondition{
  line-height: 1;
  padding:12rpx 20rpx;
  font-size: 0;
  background: #fff
}
.groupCondition view{
  display: inline-block;
  color: #999;
  margin-right: 10rpx;
  font-size: 24rpx
}
.groupCondition view icon{
  vertical-align: middle;
  margin-right: 8rpx
}
.isOver{
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}
/* 已开团 */
.openGroup{
  margin-top:20rpx; 
  background: #fff
}
.openTips{
  text-align: center;
  padding: 20rpx 0;
  font-size:28rpx;
  color: #999;
  border-bottom: 1rpx solid #f2f2f2
}
.openGroupList{
  padding: 20rpx
}
.openGroupItem:not(:first-of-type){
  margin-top: 20rpx
}
.openGroupItem{
  font-size: 28rpx;
  border-radius: 60rpx;
  background: #f2f2f2;
  overflow: hidden;
  box-shadow:0px 4px 10px rgba(93,93,93,0.2)
}
.openGroupItem .userHead{
  margin-right:20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%
}
.openGroupItem .userHead image{
    width: 100%;
    height: 100%;
    border-radius:50%
}
.openGroupItem .groupBtn{
  margin:0 28rpx; 
  padding: 12rpx 16rpx;
  color: #fff;
  background: #fe3d49;
  border-radius: 8rpx 
}
/* 提示 */
.tips{
  padding:0 20rpx 20rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #999;
  background: #fff
}
.groupTips{
  display: inline-block;
  color: #fe3d49
}
/* 地址导航 */
.storeInfo{
  margin-top:20rpx;
  padding: 20rpx;
  background: #fff
}
.storeInfo .head{
  width:140rpx;
  height:140rpx;
  border-radius:10rpx;  
  overflow:hidden;
  margin-right:20rpx
}
.storeInfo .head image{
  width: 100%;
  height: 100%
}
.storeInfo .content{
  font-size: 28rpx
}
.storeInfo .content .title{
  font-size: 32rpx
}
.storeInfo .content .f01{
  margin-top:12rpx;
  color: #666;
  font-size: 28rpx
}
.callphone{
    margin: auto 0;
    width: 58rpx;
    height:58rpx;
    overflow: hidden
}
.callphone view{
  position: relative;
  left:-58rpx;
  width: 58rpx;
  height: 58rpx;
  border-right: 58rpx solid transparent;
  background: url(data:image/png;base64,) no-repeat;
  background-size:100%;
  -webkit-filter: drop-shadow(58rpx 0);
  filter: drop-shadow(#fe3d49 58rpx 0)
}
/* 详情 */
.groupDtl{
  padding: 20rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  font-weight: 400;
  background: #fff
}
.groupDtlTitle{
  font-size: 28rpx;
  color: #333;
  font-weight: 700
}
.dtlSwiper{
  margin-top: 20rpx
}
.DescImgList{
  margin-top: 12rpx;
  text-align: center
}
.DescImgList image{
    width: 100%
}
/* 猜你喜欢 */
.likeTitle{
  padding: 20rpx;
  color: #333;
  text-align: center;
  font-size: 32rpx
}
.icon-like{
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  overflow: hidden;
}
.icon-like view{
  position: relative;
  height:38rpx;
  width:38rpx;
  left: -38rpx;
  border-right: 38rpx solid transparent;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 100%;
  -webkit-filter: drop-shadow(38rpx 0);
   filter: drop-shadow(#fe3d49 38rpx 0)
}

.likeList{
  font-size: 0;
}
.likeItem{
  margin-bottom: 20rpx;
  width:340rpx;
  height:528rpx;
  border-radius: 8rpx;
  padding-bottom: 10rpx;
  border: 1rpx solid #e5e5e5
}
.likeItemTitle{
  padding:0 10rpx;
  margin-top: 12rpx;
  font-size: 30rpx;
  color: #333
}
.likeItemInfo{
  padding:0 10rpx;
  margin-top: 8rpx;
  font-size: 24rpx;
  color:#666
}
.likeItemCover{
   width:100%;
   height:340rpx;
   border-top-left-radius:8rpx;
   border-top-right-radius:8rpx;
   overflow: hidden
}
.likeItemCover image{
  width: 100%;
  height: 100%
}
.likeItemPrice{
  padding:0 10rpx;
  margin-top:auto;
  line-height: 1
}
.currentPrice{
  margin-right: 20rpx;
  color: #fe3d49;
  font-size: 36rpx
}
.originPrice{
  line-height: 42rpx;
  color: #666;
  font-size: 28rpx;
  text-decoration: line-through
}
/* 底部 */
#footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  line-height: 1;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #f2f2f2
}
.moreGroup{
  width:200rpx;
  height: 100%;
  font-size:28rpx;
  color: #666;
  text-align: center
}
.dot{
  width: 100%;
  font-size: 0
}
.dot::before,.dot::after{
  content: '';
}
.dot1,.dot::before,.dot::after{
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background: #999;
  border-radius: 50%
}
.dot::before{
  margin-right: 12rpx
}
.dot::after{
  margin-left: 12rpx
}
.waitActive{
  text-align: center;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #666;
  background: #c1c1c1
}
.footerActive{
  font-size: 28rpx;
  color: #fff
}
.overActive{
  font-size:28rpx;
  color:#666;
  background:#ccc
}
.singlePurchase,.groupPurchase{
  height:100rpx
}
.singlePurchase{
  background: #ff9402
}
.groupPurchase{
  background: #fe3d49
}
.footerActive .tag{
  margin-bottom: 6rpx
}
/* 关注 */
.followLayer{
  position: fixed;
  top: 0;
  padding: 12rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  background: rgba(0, 0, 0, .58);
  z-index:2
}
.followCount:not(:last-of-type){
  padding-right: 20rpx
}
.followCount:last-of-type{
  margin-right: auto
}
.follow{ 
  margin-left: auto;
  padding:8rpx 18rpx;
  background: #fe3d49;
  border-radius: 8rpx
}
/* 海报 */
.poster{
  position: fixed;
  top: 150rpx;
  right: 20rpx;
  width: 40px;
  height: 40px;
  background-color: rgba(0,0,0,.58);
  border-radius: 50%;
  font-size: 14px;
  color: #fff;
  line-height: 40px;
  text-align: center;
  z-index: 10
}
/* 支付弹层 */
.paymentLayer{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .42);
  z-index: 999;
}
.paymentContent{
  position: relative;
  margin: auto;
  width: 85%;
  padding: 20rpx 0 0;
  background: #fff;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.paymentTitle{
  padding: 20rpx 20rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.paymentNum{
  margin-left:30rpx;
  height: 80rpx;
  width:246rpx;
  border-radius:6rpx;
  text-align: center;
  line-height: 80rpx;
  border:1rpx solid #f2f2f2;
  color: #666
}
.paymentNum view:not(:last-of-type){
  border-right: 1rpx solid #f2f2f2
}
.paymentNum view{
  position: relative;  
  box-sizing: border-box;
  height: 100%
}
.paymentNum .minus:before,.paymentNum .add:before,.paymentNum .add:after{
  content: '';
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin:auto;
  background: #999
}
.paymentNum .minus:before,.paymentNum .add:before{
  width: 40rpx;
  height: 2rpx
}
.paymentNum .add:after{
  height: 40rpx;
  width: 2rpx
}
.paymentContent .phone{
  padding: 36rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.exchangeTime{
  padding: 36rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.paymentBtn{
  height: 94rpx;
  padding-left: 20rpx
}
.shouldPay{
  line-height: 88rpx
}
.surePay{
  width: 220rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  background: #fe3d49
}
.close{
  position: absolute;
  width: 30px;
  height: 30px;
  top: 20rpx;
  right: 20rpx
}
.close::before,.close::after{
  background: #999
}

.timer-count-wrap {
  position: absolute;
  bottom:0;
  left:0;
  width: 100%;
  padding:5px 10px;  
  color:#fff;
  background: rgba(0, 0, 0, .5);
}

