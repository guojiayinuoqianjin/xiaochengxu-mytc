/* 倒计时 */
.countTime{
  position: relative;
  padding: 30rpx 0 10rpx;
  font-size: 28rpx;
  color: #999;
  background: #fff
}
.countTime::before,.countTime::after{
  display: inline-block;  
  content: '';
  position: absolute;
  top:57%;
  width: 50rpx;
  height: 1rpx;
  background: #e5e5e5
}
.countTime::before{
  left: 80rpx
}
.countTime::after{
  right:80rpx
}
.countTime .times{
  color: #fff;
  padding: 12rpx;
  font-size: 32rpx;
  background: #fe3d49
}
