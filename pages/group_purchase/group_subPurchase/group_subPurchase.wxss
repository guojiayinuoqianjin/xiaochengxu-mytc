/*拼团信息 */
.groupInfo{
  position: relative;
  line-height: 1;
  padding: 20rpx;
  background: #fff
}
.groupInfo .groupInfoCover{
  width:200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden
}
.groupInfo .groupInfoCover image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx
}
.groupInfoCon {
  margin-left: 20rpx
}
.groupInfoCon .title{
  color: #666;
  font-size: 32rpx;
  font-weight: 700
}
.groupInfoCon .storeName{
  word-break: break-all;
  font-size: 28rpx
}
.groupInfoCon .groupPrice{
  color: #333;
  line-height: 1;
  font-size: 28rpx;
  width: 80%
}
.groupInfoCon .groupPrice .big_money{
  font-size: 36rpx;
  color: #fe3d49
}
.groupInfoCon .groupPrice .small_money{
  text-decoration: line-through
}
.groupInfoCon .groupPrice view:not(:last-of-type){
  margin-right: 20rpx
}
.groupCondition{
  font-size: 28rpx
}
.groupCondition .groupNeed{
  color: #999;
  padding-right: 8rpx;
  border-right: 1rpx solid #999;
  box-sizing: border-box
}
.groupCondition .groupNow{
  padding-left: 8rpx;
  color: #999
}
.groupCondition .groupNeed::before{
  content: '';
  display:inline-block;
  width:40rpx;
  height:28rpx;
  margin-right:8rpx;
  background: url(data:image/png;base64,);
  background-size: 100%
}
.groupSuccess{
  position: absolute;
  bottom: 100rpx;
  right: 0;
  line-height:1;
  font-size: 36rpx;
  padding: 8rpx 12rpx;
  color: #fe3d49;
  border: 2rpx solid #fe3d49;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  z-index: 2
}
.groupFail{
  position: absolute;
  bottom: 100rpx;
  right: 0;
  line-height:1;
  font-size: 36rpx;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  padding: 8rpx 12rpx;
  color: #999;
  border: 2rpx solid #999;
  z-index: 2
}
.groupMainInfo{
