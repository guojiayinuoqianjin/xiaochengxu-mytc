}
.shouldPay{
  line-height: 88rpx
}
.surePay{
  width: 220rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  background: #fe3d49
}
.close{
  position: absolute;
  width: 30px;
  height: 30px;
  top: 20rpx;
  right: 20rpx
}
.close::before,.close::after{
  background: #999
}
.groupOver{
  padding: 12rpx 0;
