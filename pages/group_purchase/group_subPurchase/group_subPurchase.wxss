/* 支付弹层 */
.paymentLayer{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .42);
  z-index: 999;
}
.paymentContent{
  position: relative;
  margin: auto;
  width: 85%;
  padding: 20rpx 0 0;
  background: #fff;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.paymentTitle{
  padding: 20rpx 20rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.paymentNum{
  margin-left:30rpx;
  height: 80rpx;
  width:246rpx;
  border-radius:6rpx;
  text-align: center;
  line-height: 80rpx;
  border:1rpx solid #f2f2f2;
  color: #666
}
.paymentNum view:not(:last-of-type){
  border-right: 1rpx solid #f2f2f2
}
.paymentNum view{
  position: relative;  
  box-sizing: border-box;
  height: 100%
}
.paymentNum .minus:before,.paymentNum .add:before,.paymentNum .add:after{
  content: '';
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin:auto;
  background: #999
}
.paymentNum .minus:before,.paymentNum .add:before{
  width: 40rpx;
  height: 2rpx
}
.paymentNum .add:after{
  height: 40rpx;
  width: 2rpx
}
.paymentContent .phone{
  padding: 36rpx 20rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.exchangeTime{
  padding: 36rpx 20rpx;
