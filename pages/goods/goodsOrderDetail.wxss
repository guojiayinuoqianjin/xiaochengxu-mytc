view {
    line-height: 1;
    box-sizing: border-box;
}
.coupon-number {
    color: #333;
    font-size: 28rpx;
    padding: 12rpx 20rpx;
    background: #f0f0f0;
    display: inline-block;
    margin: 60rpx 0 20rpx;
}

.coupon-qr {
    width: 40%;
    display: block;
    margin: 0 auto;   
}

.tip-word {
    padding: 16rpx 0 28rpx;
    font-size: 28rpx;
    color: #666;
}

.goods-img {
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}

.goods-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 30rpx;
}

.goods-size {
    font-size: 24rpx;
    color: #666;    
}
.goods-size + .goods-size{
    margin-top: 12rpx;
}

.goods-num {
    padding: 20rpx;
    background: #fff;
    font-size: 24rpx;
    color: #666;
    text-align: right;
    border-top: 1rpx solid #f0f0f0;
}

.refund-btn {
    color: #ccc;
    border: 1rpx solid #ccc;
    padding: 12rpx 20rpx;
    display: inline-block;    
    font-size: 26rpx;
}

.order-detail-info {
    font-size: 28rpx;
    color: #666;
    background: #fff;    
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.order-detail-info view {
    line-height: 1.7;
}

.order-store {
    background: #fff;
}

.order-store .title {
    padding: 1rem;
    font-size: 28rpx;
    color: #666;
    border-bottom:1rpx solid #f0f0f0;    
}

.store-img {
    width: 144rpx;
    height: 144rpx;
    margin-right: 20rpx;
}

.store-name{
    font-size: 28rpx;
    color:#333;
}
.store-time{
    margin-top: 20rpx;
    color:#666;
    font-size: 24rpx;
}
.store-des {
    margin-top: 16rpx;
    color:#666;
    font-size: 24rpx;
}

.icon-tel {
    color: #fe3d49;
    font-size: 40rpx;
    padding: 0 30rpx;
}

.order-list + .order-list {
    border-top: 1rpx solid #f0f0f0;
}

.order-list {
    position: relative;
}

.single-refund-btn {
