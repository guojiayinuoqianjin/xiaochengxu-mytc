.refund-textarea {
    font-size: 28rpx;
    color: #333;
    padding: 20rpx;
    height: 200rpx;
}

.refund-msg-btn {
    font-size: 28rpx;
    text-align: center;
    background: #fe3d49;
    color:#fff;
    padding: 28rpx 0;   
}

.refund-time {
    background: #fff;
    font-size: 28rpx;
