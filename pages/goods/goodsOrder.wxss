page{
    --main-color:#fe3d49;
    padding-bottom: 100rpx;
    font-size: 28rpx
}
input{
    caret-color: var(--main-color);
    text-align: right
}
.icon-arrow{
    width: 28rpx;
    height: 28rpx;
    vertical-align:middle;
    margin-right:-14rpx
}
.icon-location{
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle
}
.goods-price{
    font-size:32rpx;
    color: var(--main-color)
}
.goods-price::before{
    content: "￥";
    font-size: 24rpx;
    vertical-align: 1px;
    color: var(--main-color)
}
.goods-order-item{
    padding: 20rpx;
    color: #333;
    background: #fff;
    border-bottom: 1rpx solid #f2f2f2
}
/* 导航 */
.goods-order-nav{
    margin:0 auto;
    width: calc(100% - 100rpx);
    text-align: center;
    line-height: 1;
    color:var(--main-color);
    border:1rpx solid var(--main-color);
    border-radius:8rpx
}
.active{
    color: #fff;
    background: var(--main-color)
}
.nav-item{
    padding: 20rpx 0;
}
/* 商家配送 */
.goods-order-content{
    margin-bottom: 20rpx
}
.goods-deliver .goods-order-item{
    border-bottom: none
}
.goods-accept-address{
    position: relative;
    margin-bottom: 20rpx;
    padding:30rpx 20rpx;
    background: #fff;
    border-bottom:5px solid;
    border-image:url(data:image/png;base64,) 5 5 round; 
    border-top: none
}
.goods-accept-address .icon-location{
    width: 36rpx;
    height: 36rpx;
    margin:  auto 0
}
.goods-accept-address .icon-arrow{
    position: absolute;
    top: 0;
    bottom: 0;
    right: 6rpx;
    margin: auto 0;
}
.fill-address{
    margin:0 16rpx;
    color: #333
}
.address-tag{
    vertical-align:middle;
    font-size: 24rpx;
    color: rgb(245, 223, 195);
    background: var(--main-color)
}
/* 自提 */
.goods-lift-info{
    margin-bottom: 20rpx;
    padding: 30rpx 20rpx;
    color: #333;
    background: #fff
}
.goods-lift-location{
    word-break: break-all;
    margin-bottom: 12rpx;
    text-indent: 4rpx;
}
/* 购买商品信息 */
.goods-order-info{
    margin-bottom:20rpx;
    background: #fff
}
.goods-order-store{
    padding: 30rpx 20rpx;
    color: #333;
    border-bottom: 1rpx solid #f2f2f2
}
.goods-order-detail{
    padding: 30rpx 20rpx
}
.goods-order-detail:not(:last-of-type){
    border-bottom: 1rpx solid #f2f2f2
}
.goods-order-cover{
    margin-right: 20rpx;
    width:180rpx;
    height:180rpx 
}
.goods-order-cover image{
    width: 100%;
    height: 100%
}
.goods-name{
    color: #333;
    margin-bottom: 10rpx;
}
.goods-type{
    color: #999
}
.goods-puchase-num{
    text-align: right;
    color: #333;
    margin-top: auto
}
.goods-price-calc{
    display:inline-block;
    min-width:90rpx;
    margin-left:10rpx;
    text-align: right
}
.deliver-fee{
    border-bottom: none
}
.deliver-fee .goods-price{
    min-width:90rpx;
    margin-left:10rpx;
    text-align: right;
}
.goods-payment{
    position:fixed;
    bottom:0;
    width:100vw;
    height:100rpx;
    color: #fff;
    text-align:center;
    line-height:100rpx;
    background: #fff;
    border-top:1rpx solid #f2f2f2;
    box-sizing:border-box
}
.goods-total-price{
    padding-right: 20rpx;
    box-sizing: border-box;
    text-align: right;
    color: #333
}
.goods-pay{
    width: 280rpx;
    color: #fff;
    text-align: center;
    background: var(--main-color)
}

.goods-release-fare-template {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.goods-release-fare-template-title {
    height: 96rpx;
    text-align: center;
    line-height: 96rpx;    
    color: #999;
    border-bottom: 1rpx solid #f0f0f0;
}

.goods-release-fare-template-item {      
    padding: 0 30rpx;
    display: block;
}

.goods-release-fare-template-item + .goods-release-fare-template-item {
    border-top: 1rpx solid #f0f0f0;
}

.goods-release-fare-template-btn {
    height: 108rpx;
    line-height: 108rpx;
    text-align: center;
}

.goods-release-fare-btn-wrap {
     border-top: 1rpx solid #f0f0f0;
     padding: 30rpx;
     text-align: center;
     color:#333;
}

.city-card {
    padding:0 20rpx;
    height:40rpx;
    line-height:40rpx;
    border:1rpx solid #808080;
    border-radius:8rpx;
    font-size:20rpx;
    text-align:center;
    position:absolute;
    left:0;
    bottom:-4rpx;
    color:#808080;   
}

.re-coupon-body {
    width: 640rpx;
    border-radius:8rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;

}

.re-coupon-body-title {
    padding: 20rpx;
    font-size: 32rpx;
    background: #fe3d49;
    color: #fff;   
    text-align: center;
    position: relative;
}

.re-coupon-body-title icon {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-60%)
}

.re-coupon-body-scroll {
    background: #f0f0f0;
}

.re-coupon-item-wrap {
    padding: 28rpx;
}

.re-coupon-item {
    background: #fff;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;   
    position: relative;
    border-radius: 8rpx;
}

.re-coupon-price {
    color: #fe3d49;     
    font-size: 40rpx;    
}

.re-coupon-right {
    font-size: 24rpx;
    width: 360rpx;
}

.re-coupon-right :first-child {
    padding:0 0 10rpx;
}

.re-coupon-enddays {
    position: absolute;
    left: 0;
    top: 0;
    font-size: 20rpx;
    color: #fff;
    background: #fe3d49;
    border-top-right-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
    padding: 6rpx 12rpx;
}

.voucher-date {
    font-size: 20rpx;    
    color: #999;
}

.voucher-cell {
    background:#fff;
    padding:20rpx 20rpx;
    margin-bottom:20rpx;    
}

.goods-order-tips {
    background: #fff;
    padding: 0 0 100rpx 20rpx;
}

