@import "./comment.wxss";
@import '../../public/navigatorCommon.wxss';
page{
    --main-color:#fe3d49;
    background: #fff
}

.post-title{
    padding:8rpx 20rpx;
    font-size: 36rpx;
    line-height: 1.6;
    color: #333;
    background: #fff
}
.post-info{
    padding:0 20rpx 10rpx;
    background: #fff
}
.post-info .times{
    margin-right:20rpx;
    color: #999;
    font-size: 28rpx
}
.post-info .cityName{
    font-size: 28rpx;
    color: #fe3d49
}
.content{
    padding:0 20rpx;
    background: #fff
}
.headlines-video{
    padding: 10rpx 0 20rpx;
    width: 100%;
    height: 400rpx;
}
.phase{
    line-height: 2;
    font-size: 28rpx;
    color: #333
}
.index_title_cell{
    padding:20rpx 20rpx;
    background:#fff
}
.wxParse-p image{
    vertical-align: top
}
.wxParse-p{
    line-height: 2
}

.reward{
    padding-top: 36px;
    text-align: center
}
.reward-btn{
    margin: 0 auto;
    width: 100rpx;
    padding: 16rpx 20rpx;
    font-size: 28rpx;
    line-height: 1;
    color: #fff;
    background: #fe3d49;
    border-radius: 8rpx
}
.reward-account{
    margin-top: 24rpx;
    font-size: 28rpx;
    color: #333
}
.reward-account text{
    color: #fe3d49
}
.reward-avatarList{
    margin-top: 24rpx;
    height: 70rpx
}
.reward-avatar{
    width: 70rpx;
    height: 70rpx;
    margin-right: 10rpx;
    border-radius: 50%
}
.reward-ellipse{
    margin-top: auto;
    color: #999
}
.post-account{
    padding:36rpx 0 20rpx;
    font-size: 28rpx;
    color: #666;
}
.post-account image{
    vertical-align: middle
}
.post-viewer{
    margin-right: 24rpx
}
.post-viewer image{
    margin-right: 10rpx;
    width:32rpx;
    height:32rpx
}
.post-likeMan image{
    width:42rpx;
    height:40rpx
}
.comment-list{
    font-size: 26rpx;
    padding-bottom: 50px;
    background: #fff
}
.left-message-title{
    position: relative;
    padding: 24rpx 0;
    text-align: center;
    font-size: 32rpx;
    color: #666666
}
.left-message-title::before,.left-message-title::after{
    position: absolute;
    content: '';
    display: block;
    top: 0;
    bottom: 0;
    margin: auto 0;
    width: 23%;
    height: 1px;
    background: #e5e5e5;
    transform: scaleY(.5)
}
.left-message-title::before{
    left: 15%
}
.left-message-title::after{
    right: 15%
}
.comment-gif{
    width: 24px;
    height: 24px;
    vertical-align: middle;
}
.comment-item{
    padding:20rpx
}
.comment-item:first-of-type{
    margin-top: 0
}
.comment-item:not(:last-of-type){
    border-bottom: 1rpx solid #f0f0f0
}
.comment-item .comment-userInfo{
    font-size: 28rpx;
}
.comment-item .comment-userInfo .avatar{
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden
}
.comment-item .comment-userInfo .avatar image{
    width: 100%;
    height: 100%
}
.comment-item .comment-userInfo .username{
    max-width: 40%;
    font-size:28rpx;
    color: #333
}
.comment-item .comment-userInfo .deliver-time{
    font-size:24rpx;
    color: #999
}
.comment-like{
    color:#999
}
.comment-like .icon{
    display:inline-block;
    vertical-align:middle
}
