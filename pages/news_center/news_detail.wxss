.comment-content{
    padding: 0 0 20rpx 90rpx
}
.comment-phase{
    margin-top: 16rpx;
    line-height: 1.5;
    word-break: break-all;
    color: #333
}
.comment-phase text{
    vertical-align: middle
}
.comment-pic{
    margin-top: 16rpx
}
.comment-pic image{
    width:120rpx;
    height: 120rpx
}
.comment-btn{
    margin-left: auto;
    margin-top: 20rpx;
    width: 50px;
    text-align: right;
    line-height: 1;
    color: #999
}
.comment-btn image{
    margin-right:10rpx;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle
}
.top-border{
    border-width: calc(100vw - 40rpx);
    border-top: 1rpx solid #f2f2f2
}
.comment-subList{
    margin-left:90rpx;
    background: #f2f2f2
}
.comment-subItem,.seeAllSubComments{
    line-height: 1.85
}
.comment-subItem-tap{
    background: rgba(0,0,0,0.08)
}
.comment-subItem text{
    vertical-align: middle
}
.comment-subItem .comment-subItem-username{
    color: #fe3d49
}
.isLoading,.loadingError,.loadingAll{
    padding: 30rpx 0;
    text-align: center;
    font-size: 12px;
    color: #999
}
.isLoading image{
    margin-right: 10rpx;
    width: 42rpx;
    height: 42rpx;
    vertical-align: middle
}
.loadingError text{
    color: #fe3d49
}
.comment-empty{
    padding: 20rpx 0;
    text-align: center
}
.comment-empty image{
    width:280rpx;
    height: 280rpx
}
.comment-empty view{
    margin-top: 12rpx;
    font-size: 28rpx;
    color: #999
}
.like-anim{
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width:150px;
    height:150px;
    background: url(http://j.vzan.cc/content/city/xcx/images/like-anim.png) no-repeat;
    background-size: 3600px 150px
}

.praiseAnimation{
    display: block;
    animation: praiseAnimation 1.32s .16s both 1 steps(24)
}
@keyframes praiseAnimation{
    0%{
        background-position: 0 0
    }
    100%{
        background-position: -3600px 0
    }
}
.icon-action{
    position: fixed;
    right: 20rpx;
    width: 44px;
    height: 44px;
    border-radius: 50%;
}
.backIndex{
  padding:6px 8px;
  text-align:center;
  font-size:12px;
  box-sizing:border-box;
  bottom:260rpx;
  color:#fff;
  background:rgba(0,0,0,.42)
}