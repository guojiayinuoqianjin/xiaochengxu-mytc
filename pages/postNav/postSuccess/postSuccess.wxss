.con{
  width: 100%;
  margin-top: 180rpx;
  text-align:  center;
  font-size: 28rpx;
}
.conTip{
  margin: 20rpx 0;
}
.topBtn{
  position: relative;
  margin-left: 10rpx;
  color: #1296db;
}
.topBtn::after{
  position: absolute;
  right: -36rpx;
  top: 4rpx;
  display: inline-block;
  content: "";
  width: 36rpx;
  height: 36rpx;
  background: url('data:image/png;base64,') 0 0 no-repeat;
  background-size: 100% 100%;
}
/* btn */
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #FF5A00;
  z-index: 100;
}