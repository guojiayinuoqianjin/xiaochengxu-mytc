.cells {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  margin-bottom: 20rpx;
}

.cellsTitle {
  width: 100%;
  text-align: left;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.cell>icon {
  margin-right: 20rpx;
}

.cell {
  border-bottom: 1rpx solid #F0F0F0;
  padding: 30rpx 0;
}

.cells:last-child {
  border-bottom: none;
}

/* btn */
.btns {
  width: 100%;
  height: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 100;
}

.infoTop {
  height: 88rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.topStatus {
  display: inline-block;
  content: "";
  width: 100rpx;
  height: 60rpx;
}

.closeTop {
  background: url('data:image/png;base64,') 0 0 no-repeat;
  background-size: 100%;
}

.openTop {
  background: url('data:image/png;base64,') 0 0 no-repeat;
  background-size: 100%;
}

.saveBtn {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999999;
  background: #fff;
  font-family: "微软雅黑";
}

.showPrice,
.save {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.showPrice>text {
  color: #F90606;
}

.showPrice {
  border-top: 1rpx solid #f0f0f0;
}

.save {
  background: #FF5A00;
  color: #FFF;
}