.tips {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: #FF5A00;
  margin-bottom: 50rpx;
}

/* daysINfo */
.daysInfo {
  box-sizing: border-box;
  width: 90%;
  height: auto;
  margin: 0 auto 100rpx;
  padding: 30rpx 30rpx 0 30rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 0 10rpx 0 rgba(204, 204, 204, 0.2);
}

.daysInfo .title {
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

cell {
  box-sizing: border-box;
  padding: 30rpx 0;
}

.cell>icon {
  margin-right: 20rpx;
}

.cell {
  border-bottom: 1rpx solid #F0F0F0;
  padding: 30rpx 0;
  font-size: 30rpx;
}

/* btns */
.btns {
  width: 100%;
  height: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 100;
}

.saveBtn {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999999;
  background: #fff;
  font-family: "微软雅黑";
}

.showPrice,
.save {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.showPrice>text {
  color: #F90606;
}

.showPrice {
  border-top: 1rpx solid #f0f0f0;
}

.infoTop {
  height: 88rpx;
  box-sizing: border-box;
  padding: 30rpx;
}

.topStatus {
  display: inline-block;
  content: "";
  width: 100rpx;
  height: 60rpx;
}

.closeTop {
  background: url('data:image/png;base64,') 0 0 no-repeat;
  background-size: 100%;
}

.openTop {
  background: url('data:image/png;base64,') 0 0 no-repeat;
  background-size: 100%;
}

.save {
  background: #FF5A00;
  color: #FFF;
}