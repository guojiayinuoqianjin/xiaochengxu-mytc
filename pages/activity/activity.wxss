@import "../../css/cell.wxss";
@import "../../public/navigatorCommon.wxss";
.scroll_left_nav {
  height: 70rpx;
  background: linear-gradient(to bottom, #fd6731, #ff911f);
  white-space: nowrap;
  display: flex;
}
.scroll_left_nav .li {
  display: inline-block;
  position: relative;
  color: #fff;
  font-size: 28rpx;
  height: 100%;
  line-height: 70rpx;
  padding: 0 20rpx;
}
.scroll_left_nav .li.active {
  color: #fff;
  background: #ffb504;
  border-radius: 35rpx;
}

.activity_list {
  padding: 0 20rpx;
  overflow: hidden;
}
.activity_list .li {
  padding: 20rpx 1.5% 0 0;
  width: 48.5%;
  float: left;
}
.activity_list .li:nth-child(even) {
  padding: 20rpx 0 0 1.5%;
}
.activity_list .li .pic {
  position: relative;
   height: 212rpx
}
.activity_list .li .pic .label {
  color: #fff;
  font-size: 28rpx;
  height: 36rpx;
  line-height: 36rpx;
  display: block;
  position: absolute;
  top: 8rpx;
  left: -3rpx;
  box-sizing: border-box;
  padding: 0 16rpx;
  background: #ff2c31;
}
.activity_list .li .pic .pic01 {
  width: 100%;
  height: 212rpx
}
.activity_list .li .pic image {
  display: block;
}
.activity_list .li .pic .time {
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 40rpx;
}
.activity_list .li .content {
  background: #fff;
  padding: 8rpx 10rpx 10rpx;
}
.activity_list .li .content .title {
  height: 66rpx;
  line-height: 1.35;
  overflow: hidden;
  font-size: 28rpx;
}
.activity_list .li .content .price01 {
  color: #999;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.activity_list .li .content .price02 {
  margin-top: 10rpx;
  padding: 0 6rpx;
  background: #ff2c31;
  border-radius: 6rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: #fff;
}
.activity_list .li .content .price02 .bt {
  padding: 0 8rpx;
  height: 40rpx;
  background: #fdea4b;
  border-radius: 6rpx;
  color: #ff2c31;
  line-height: 40rpx;
}
.icon-kanjia:before{content:"\e61b";}
.tabItem{
    font-size: 28rpx;
    line-height: 3.14285714;
    text-align: center;
    background: #fff
}
.tabItemActive {
    position: relative;
    color: #fe3d49;
    border-bottom: 4rpx solid #fe3d49
}

.city-card-guide {
  height: 88rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  line-height: 88rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.city-card-list {
  padding: 0 20rpx 100rpx;
}

.city-card-list image {
  width: 100%;
  height: 340rpx; 
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.city-card-body {
  position: relative;  
  text-align: center;
  height: 340rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border-radius: 8rpx;
}

.city-card-body text {  

  position: absolute;
  z-index: 2;  
}

.city-card-name {
  font-size: 50rpx;
  top:15%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}

.city-card-des {
  font-size: 36rpx;
  padding: 0 30px;
  width: 100%;
  box-sizing: border-box;
  top:45%;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
}

.city-card-tips {
  font-size:30rpx;
  top:80%;
  left:50%;
  transform:translateX(-50%);
  -webkit-transform:translateX(-50%);
  position:absolute;
  z-index:50;

}

.icon-jiantou-city-card::before {
  font-size: 20rpx;
  color: #fff;
}

.icon-jiantou-city-card2::before {
  font-size: 20rpx;
  color: yellow;
}

.city-card-label {
  background:#999;
  height:50rpx;
  line-height:50rpx;
  width:235rpx;
 
  font-size:28rpx;
  position:absolute;
  top:40rpx;
  right:-60rpx;
  transform:rotate(45deg);
  -webkit-transform:rotate(45deg);
  z-index:10;
}

.black-mask {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 2;
  border-radius: 26rpx;
}
.icon-city-arrow::before {
  color: #fe3d49;
}.line-through {
    text-decoration: line-through;
}
.tipsIcon {
    position: fixed;
    bottom: 270px;
    right: 20rpx;
    z-index: 999;
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
    overflow: hidden
}

.re-coupons {
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff; 
  position: absolute;
  right: 0;
  padding: 4rpx 8rpx;
  top:8rpx;  
}

.endState {
  background: #ccc !important;
  color: #fff !important;
}