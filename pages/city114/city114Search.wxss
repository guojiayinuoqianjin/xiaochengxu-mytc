/* 搜索 */

.search-warp {
    padding: 18rpx 30rpx 0;
    background: #fff;
    position: relative;
}

.search-input {
    height: 58rpx;
    padding: 0 40rpx;
    font-size: 28rpx;
    color: #333;
    border-radius: 40rpx;
    border: 1rpx solid #e9e9e9;
    background: #f2f2f2;
}

.search-icon {
    position: absolute;
    right: 60rpx;
    top: 50%;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    z-index: 100
}

.search-tab-item {
    width: 33.333333333%;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    line-height: 80rpx;
    background: #fff;
    /* align-items: center;垂直居中 */
    justify-content: center;
    /*水平居中*/
}

.arrow {
    width: 0;
    height: 0;
    border-width: 12rpx 12rpx 0;
    border-style: solid;
    border-color: #ccc transparent transparent;
    margin-left: 8rpx;
    transition: .2s all;
}

.area-layer {
    background: #fff;
    font-size: 28rpx;
}

.area-item {
    font-size: 28rpx;
    padding: 20rpx 0;
    background: #f8f8f8;
    text-align: center;
    border-bottom: 1rpx solid #f0f0f0;
    color: #666;
}

.area-right {
    background: #f8f8f8;
}

.cat-layer {
    background: #fff;
    font-size: 28rpx;
}

.cat-item {
    font-size: 28rpx;
    padding: 20rpx 0;
    text-align: center;
    border-bottom: 1rpx solid #f0f0f0;
    color: #666;
}

.cat-right {
    background: #f8f8f8;
}

.order {
    color: #666;
    font-size: 28rpx;
    padding: 20rpx 0;
    background: #fff;
    text-align: center;
    border-bottom: 1rpx solid #f0f0f0;
}

.tab-active {
    color: #fe3d49;
}

.arrow-active {
    transform: rotate(-180deg);
}

.hot-title {
    font-size: 32rpx;
    font-weight: 700;
    width: 70%;
}

.hot-wrap {
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
}

.hot-address {
    font-size: 28rpx;
    color: #666;
    width: 70%;
}

.hot-tel {
    font-size: 28rpx;
    color: #666;
}

.hot-detail {
    color: #999;
    font-size: 24rpx;
}

.hot-detail::before {
    font-size: 24rpx;
}

.set-top-btn {
    border: 1rpx solid #fe3d49;
    font-size: 24rpx;
    color: #fe3d49;
    border-radius: 8rpx;
    padding: 12rpx 16rpx;
    position: absolute;
    width: 120rpx;
    right: 20rpx;
    top: 20rpx;
    text-align: center;
}

.top-tips {
    display: block;
    color: #fff;
    top: -36rpx;
    left: -40rpx;
    position: absolute;
    width: 0;
    height: 0;
    border-width: 40rpx;
    border-color: transparent #ff0000 transparent transparent;
    border-style: dashed solid dashed dashed;
    transform: rotate(45deg);
}

.top-tips-text {
    position: absolute;
    z-index: 2;
    top: -8rpx;
    left: 12rpx;
    color: #fff;
    font-size: 22rpx;
    transform: rotate(-45deg);
}

.logo-item {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.logo-item-wrap {
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
}

.logo-item+.logo-item {
    margin-left: 20rpx;
}

.telephone {
    background: #fe3d49;
    font-size: 24rpx;
    color: #fff;
    border-radius: 8rpx;
    padding: 12rpx 16rpx;
    position: absolute;
    width: 120rpx;
    right: 20rpx;
    top: 20rpx;
    text-align: center;
}

.common-layer {
    width: 100%;
    position: absolute;
    z-index: 999;
    top: 81rpx;
}

.active-color {
    color: #fe3d49;
}

.clamp-1 {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}


.qr-wrap {
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,.5);
    position: fixed;
    left: 0;
    top:0;  
    z-index: 1000;
  
  }
  
  .qr-main {
    width: 500rpx;
    background: #fff;
    border-radius: 4px;
    margin: 20% auto;
  }
  
  .qr {
    width: 400rpx;
    height: 400rpx;
    padding: 20rpx;
    display: block;
    margin: 0 auto;
  }
  
  .qr-title {
    padding: 30rpx 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
    text-align: center;
    font-size: 30rpx;
  }
  .xufei-warp {
    width: 100%;
    height: 100vh;
    position: fixed;
    top:0;
    left: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 20000;
  }
  
  .xufei-body {
    width: 600rpx;
    background: #fff;
    position: absolute;
    left: 50%;
    top: 20%;
    transform: translate(-50%);
    -webkit-transform: translate(-50%);
    border-radius: 4px;
  }
  .xufei-title {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: center;
    border-bottom:1rpx solid #f0f0f0;
  }
  .radio {
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    margin:0 auto;
    width: 540rpx;
    font-size: 32rpx;
  }
  
  .xufei-btn-warp {
    border-top: 1rpx solid #f0f0f0;
  }
  .radio+.radio{
    border-top: 1rpx solid #f0f0f0;
  }
  
  .xufei-btn {
    width:480rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 20rpx auto;
    color: #fff;
    background: #fe3d49;
    border-radius: 4px;
    font-size: 32rpx;
  }
  
  .close-btn {
    position:absolute;
    color:#fff;
    left:50%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
    font-size: 60rpx;
    bottom:-260rpx;  
  }
  .no-data {
    font-size: 28rpx;  
    color: #666;
    text-align: center;
    padding-top: 20rpx;
  }