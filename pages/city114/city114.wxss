/* 搜索 */
.search-warp {
  padding:18rpx 30rpx;
  background: #fff;
  position: relative;
}

.search-input {
  height: 58rpx;  
  padding:0 40rpx;  
  font-size: 28rpx;
  color:#333;
  border-radius: 40rpx;
  border:1rpx solid #e9e9e9;
  background: #f2f2f2; 
}

.search-icon {
  position: absolute;
  right: 90rpx;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  z-index: 100
}

/* swiper */
.swiper {
  height: 250rpx;
  background: #fff;
  border-radius: 8rpx; 
  overflow: hidden;
}

.swiper-item {
  width: 100%;
  border-radius: 8rpx;
}
.swiper-img {
   width: 100%; 
   height: 100%;
   border-radius: 8rpx;
}

/* 顶部tab */
.top-tab-wrap {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0; 
  background: #fff;
}
.top-tab-right-wrap {
  line-height: 80rpx;
  position: relative;
}

.top-tab1 {
  width: 200rpx; 
  border-right: 1rpx solid #f0f0f0; 
}

.top-tab4 {
  position: relative;
}

.tagTop {
position:absolute;
top:0;
right:16rpx;
width:36rpx;
height:36rpx;
color:#fff;
}

.tagTop::before{
  position: absolute;
  z-index: 1;
  content: '';
  width: 0;
  height: 0;
  border-top: 120rpx solid #fe3d49;
  border-left: 120rpx solid transparent;
}

.top-text {
  position: absolute;
  z-index: 2;
  top: 2rpx;
  right: -10rpx;
  font-size: 24rpx;
}

.top-tab4::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 16rpx solid #fe3d49;
  position: absolute;
  top: 50%;
  right: 36rpx;
  transform: translateY(-50%);

}

.active-fixed {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 200;
}

.top-tab4-area-wrap {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  border-bottom:1rpx solid #f0f0f0;
  position: absolute;
  top: 80rpx;
  left: 0;
  background: #fff;
  z-index: 300;
}

.top-tab4-area-list {
  height: 90rpx;
  line-height: 90rpx;
}
.top-tab4-area-list {
  border-bottom: 1rpx solid #f0f0f0;
}

.top-tab4-area-right, .top-tab4-area-left {
  height: 600rpx;
  overflow: scroll;
}  

/* 自定义滚动内容 */
.main {
  background: #fff;
}

.scroll-tab {
   width:200rpx;
   font-size: 28rpx;
   text-align: center;
   border-right: 1rpx solid #f0f0f0;
   background: #fff;
   height: 100vh;
   padding-bottom: 100rpx;
}

.scroll-tab-content {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #f0f0f0;  
}

.scroll-content-wrap {
  width: 550rpx;
  height: 100vh;
  background: #f2f2f2;
  padding-bottom: 100rpx;
}

.scroll-content {
  padding: 0 20rpx 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.scroll-content-top {
  height: 80rpx;
  line-height: 80rpx;  
}

.scroll-content-top-name {
  font-size: 32rpx;  
  font-weight: 500;
  display: inline-block;
  width:400rpx;
}

.scroll-content-top-link {
    font-size: 28rpx;
    font-family: consolas;
    color: #666;
    float: right;
}
.scroll-content-middle {  
  font-size: 28rpx;
  color: #666;
}

.scroll-content-middle-text {
  display: block;
  margin-bottom: 20rpx;
}

.scroll-content-bottom {
  align-items:center;
  -webkit-box-align:center;
  -webkit-align-items:center;
  -ms-flex-align:center;
  -webkit-box-pack: space-between;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

.scroll-content-bottom-btn {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  color: #fe3d49; 
  border:1rpx solid #fe3d49;
  border-radius: 8rpx;
}
 
.scroll-active {
  padding-top: 80rpx;
}

