.typelist {
  text-align: center;
  width: 100%;
  color:#101010;
}

.typelist{
  padding: 30rpx 0;
}

.typelistbox{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  font-size: 28rpx;
  max-height: 600rpx;
}

.typelistmodel {
  position: fixed;
  width: 100%;
  height: 100%;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index:999; 
}
.swiper_fabu {
  background: #fd8f45;
  height: 80rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.swiper_fabu text {
  text-align: center;
  flex: 1;
}
.fabu-cell01 {
  line-height: 1.45;
  font-size: 30rpx;
  position: relative;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  color: #333;
}
.fabu-cell01 .head {
  width: 84rpx;
  height: 84rpx;
  display: block;
  margin-right: 20rpx;
}
.fabu-cell01 .head image {
  width: 100%;
  height: 100%;
}
.fabu-cell01 text {
  display: block;
}
.fabu-cell01 .f01 {
  font-size: 30rpx;
}
.fabu-cell01 .f02 {
  font-size: 28rpx;
}
.fabu-cell01 .f03 {
  font-size: 24rpx;
}
.tips-f {
    padding: 10px 15px;
    color: #999;
    font-size: 13px;
    line-height: 1.25;
}

.ta-c {
    text-align: center;
}

.enter-city-title {
  text-align:center;  
  color:#333;
  padding:20rpx 0;
  font-size: 28rpx;
  position:relative;  
  font-weight:700;  
}

.center_li-add {
   width: 25%;
   text-align: center;
   overflow: hidden;
   float: left;
   font-size: 24rpx;
 }