@import "../../public/floatbtntpl.wxss";
@import "../../public/navigatorCommon.wxss";

.swiper_business_detail {
  height: 420rpx;
}

.swiper_business_detail swiper-item image {
  width: 100%;
  height: 100%;
}

.container {
  padding-bottom: 70px;
}

.right-side-bt {
  position: fixed;
  right: 10px;
  bottom: 60px;
  z-index: 10;
}

.icon_kanjia_tousu {
  width: 40px;
  height: 40px;
  display: block;
  background-color: rgba(0, 0, 0, .8);
  border-radius: 50%;
  font-size: 14px;
  color: #fff;
  line-height: 40px;
  text-align: center;
}

.coupon-top-wrap .time {
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
}

.coupon-top-wrap .time em {
  min-width: 44rpx;
  height: 44rpx;
  display: inline-block;
  line-height: 44rpx;
  text-align: center;
  margin: 0 10rpx;
  background: #fe3d49;
  color: #fff;
}

.youhui-title {
  background: #fff;
  padding: 20rpx;
}

.youhui-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.origin-money {
  color: #999;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-bottom: 12rpx;
}

.discount-money {
  font-size: 36rpx;
  color: #fe3d49;
  margin-bottom: 8rpx;
}

.use-date-end {
  font-size: 24rpx;
  color: #fe3d49;
}

.get-love-price-btn {
  width: 320rpx;
  height: 68rpx;
  font-size: 32rpx;
  line-height: 68rpx;
  text-align: center;
  background: #fe3d49;
  display: block;
  margin: 0 auto;
  color: #fff;
  border-radius: 32rpx;
  animation: move 1s ease-in infinite;
}

.get-love-price-btn1 {
  width: 320rpx;
  height: 68rpx;
  font-size: 32rpx;
  line-height: 68rpx;
  text-align: center;
  background: #ccc;
  display: block;
  margin: 0 auto;
  color: #fff;
  border-radius: 32rpx;
}

.youhui-btn-wrap {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 30rpx;
}

.re-coupon-label {
  font-size: 24rpx;
  color: #ffb504;
  border: 1rpx solid #ffb504;
  font-weight: normal;
  padding: 4rpx 20rpx;
}

.make-money {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 0;
  top: 75px;
  width: 74px;
  height: 25px;
  border-radius: 13px 0 0 13px;
  background: #2F2D23;
  font-size: 12px;
  color: #D9AE6F;
  z-index: 2;
}

.make-money>image {
  position: abosute;
  left: 0;
  top: 0;
  width: 25px;
  height: 25px;
  margin-left: -10px;
}

.make-money>text {
  margin-left: 3px;
}

.juzhong {
  display: flex;
  justify-content: center;
  align-items: center;
}