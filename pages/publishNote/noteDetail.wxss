@import "./detailComment.wxss";
@import "../../public/navigatorCommon.wxss";
view {
    line-height: 1;
}

.note-detail-container {
    padding-top: 20rpx;
    padding-bottom: 120rpx;
}

.note-detail-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
}

.note-detail-username {
    font-size: 28rpx;
    color: #5e5e5e;
    padding-left: 20rpx;
    width: 400rpx;
}

.title-wrapper {
    height: 120rpx;
    background: #fff;
    padding: 0 30rpx;
    margin-bottom:20rpx;
}

.note-detail-type {
    font-size: 28rpx;
    color: #fff;
    width: 160rpx;
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    background: #fa0f20;
    border-radius: 25rpx;
}

.note-detail-address {
    font-size: 32rpx;
    background: #fff;
    padding: 0 0 0 30rpx;
    margin-bottom: 20rpx;
}

.left-title {
    width: 17%;
    white-space: nowrap;
    padding-right: 20rpx;
}

.address-item {
    height: 80rpx;
}

.address-icon {
    text-align: center;
    padding: 0 30rpx;
    white-space: nowrap;
    position: relative;
}

.address-icon::before {
    content: "";
    position: absolute;
    height: 40rpx;
    border-left: 1rpx solid #eaeaea;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}

.description {
    background: #fff;
    padding: 30rpx;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

.description-title {
    font-weight: 700;
    padding-bottom: 30rpx;
}

.description-tips {
    font-size: 24rpx;
    padding-top: 30rpx;
}

.report-wrapper {
    font-size: 24rpx;
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
}

.city-post-imgList image {
    display: block;
    margin: 0 auto;
    width: auto
}

.city-post-imgList image:not(:last-of-type) {
    margin-bottom: 10rpx
}

.city-post-imgList image, .city-post-content .tips {
    margin-top: 10rpx
}

.post_img {
    width: 100%;
    height: 100%;
}

.note-detail-title {
    font-size: 32rpx;
    background: #fff;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}

.note-detail-price {
    color: #fa0f20;
    font-size: 32rpx;
}

.icon-report::before {
    font-size: 24rpx;
    color: #f4ea2a;
    padding-right: 16rpx;
}

/* 评论 */

.city-post-comment {
    color: #101010;
    font-size: 28rpx;
    background: #fff;
}

.city-post-comment-title {
    padding: 30rpx 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

.comment-status {
    text-align: center;
    padding: 40rpx 0;
    font-size: 12px;
    color: #666
}

.comment-status:last-of-type text {
    color: #fe3d49
}

.footer-bar {
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid #f2f2f2;
    box-sizing: border-box;
    width: 100vw;
    height: 100rpx;
    background: #fff
}

.city-btn {
    margin-left: auto;
    width: 200rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    background: #fe3d49
}

.note-detail-footer {
    height: 98rpx;
    color: #fff;
    background: #fff;
    position: fixed;
    width: 100%;
    bottom: 0;
    border-top: 1rpx solid #eaeaea;
}

.note-detail-footer-left {
    font-size: 24rpx;
    text-align: center;
}

.note-detail-footer-right {
    font-size: 32rpx;
    width: 360rpx;
    text-align: center;
    background: linear-gradient(to right, #fa0f20, #fa0f73);
    height: 100%;
    line-height: 98rpx;
}

.icon-index-home::before, .icon-publish::before, .icon-my-publish::before {
    font-size: 48rpx;
}

/* 评论 */

.comment-item {
    padding: 20rpx
}

.comment-item:first-of-type {
    margin-top: 0
}

.comment-item:not(:last-of-type) {
    border-bottom: 1rpx solid #f0f0f0
}

.comment-item .comment-userInfo {
    font-size: 28rpx;
}

.comment-item .comment-userInfo .avatar {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    overflow: hidden
}

.comment-item .comment-userInfo .avatar image {
    width: 100%;
    height: 100%
}

.comment-item .comment-userInfo .username {
    max-width: 40%;
    font-size: 28rpx;
    color: #333;
    padding-bottom: 12rpx;
}

.comment-item .comment-userInfo .deliver-time {
    font-size: 24rpx;
    color: #999
}

.comment-like {
    color: #999
}

.comment-like .icon {
    display: inline-block;
    vertical-align: middle
}

.comment-content {
    padding: 0 0 20rpx 90rpx
}

.comment-phase {
    margin-top: 16rpx;
    line-height: 1.5;
    word-break: break-all;
    color: #333
}

.comment-phase text {
    vertical-align: middle
}

.comment-pic {
    margin-top: 16rpx
}

.comment-pic image {
    width: 120rpx;
    height: 120rpx
}

.comment-btn {
    margin-left: auto;
    margin-top: 20rpx;
    width: 54px;
    text-align: right;
    line-height: 1;
    color: #999
}

.comment-btn image {
    margin-right: 10rpx;
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle
}

.top-border {
    border-width: calc(100vw - 40rpx);
    border-top: 1rpx solid #f2f2f2;
}

.comment-subList {
    margin-left: 90rpx;
    font-size: 28rpx;
    background: #f2f5f7;
}

.comment-subItem, .seeAllSubComments {
    line-height: 1.85;
}

.comment-subItem-tap {
    background: rgba(0, 0, 0, 0.08)
}

.comment-subItem text {
    vertical-align: middle
}

.comment-subItem .comment-subItem-username {
    color: #fe3d49;
    padding-left: 20rpx;
}

.comment-gif {
    width: 24px;
    height: 24px;
    vertical-align: middle
}

.post_img {
    width: 100%;
    height: 100%;
}

