.house-detail {
    background: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.house-detail-title {
    font-size: 32rpx;
    font-weight: 700;
    padding-bottom: 40rpx;
}

.house-detail-main {
    text-align: center;
}

.report {
    width: 28rpx;
    height: 26rpx;
    padding-right: 20rpx
}

.car-detail {
    background: #fff;
    font-size: 32rpx;
    margin: 0 0 20rpx;
    padding: 0 30rpx;
}

.car-detail-item {
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid #eaeaea;
}

.car-detail-main {
    background: #FFF;
    margin-bottom: 20rpx;
    padding: 30rpx;
}

.car-detail-title {
    font-size: 32rpx;
    color: #101010;
    font-weight: 700;
    padding-bottom: 30rpx;
}

.car-detail-content {
    font-size: 28rpx;
    position: relative;
}

.car-detail-content-top {
    padding-top: 30rpx;
}

.car-detail-content-right {
    padding-right: 32rpx;
}

.wxParse-inline {
    line-height: 1.4;
    font-size: 32rpx;
    color: #5E5E5E;
}

.note-detail-jobwanted-title {
    font-size: 32rpx;
    color: #101010;
    font-weight: 700;
    line-height: 1.2;
    width: 500rpx;
}

.personal-info {
    font-size: 24rpx;
    padding-bottom: 20rpx;
}

.salary-wrapper {
    font-size: 24rpx;
    color: #101010;
    padding-top: 20rpx;
}

.poster-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}

.floor {
    font-size: 24rpx;
    color: #FA0F20;
    white-space: nowrap;
    padding: 0 20rpx;
    height: 32rpx;
    line-height: 32rpx;
    background: rgba(250, 15, 32, 0.1);
    border: 1rpx solid rgba(250, 15, 32, 1);
